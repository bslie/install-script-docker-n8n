# === Основные настройки ===
DOMAIN=n8n.example.com
EMAIL=admin@example.com
BASE_DIR=/opt/n8n

# === n8n настройки ===
N8N_PORT=5678
N8N_HTTP_PORT=80       # внешний HTTP порт (автоматически заменится, если занят)
N8N_HTTPS_PORT=443     # внешний HTTPS порт (автоматически заменится, если занят)

# === PostgreSQL ===
POSTGRES_USER=n8n
POSTGRES_PASSWORD=supersecurepassword
POSTGRES_DB=n8n
